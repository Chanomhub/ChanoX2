{
  "name": "chanox2",
  "version": "1.1.9",
  "description": "Desktop application for ChanomHub",
  "author": {
    "name": "ChanomHub",
    "email": "contact@chanomhub.com"
  },
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "electron:start": "concurrently -k \"bun start\" \"wait-on tcp:8081 && cross-env NODE_ENV=development electron electron-main.js\"",
    "build:web": "expo export --platform web --output-dir web-build && node scripts/fix-web-paths.js",
    "build:electron": "electron-builder",
    "electron:prod": "npm run build:web && cross-env NODE_ENV=production electron electron-main.js",
    "build:all": "npm run build:web && npm run build:electron",
    "test": "jest"
  },
  "dependencies": {
    "7zip-bin": "^5.2.0",
    "@expo/metro-runtime": "~6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-navigation/native": "^7.1.24",
    "@react-navigation/native-stack": "^7.8.5",
    "@tanstack/react-query": "^5.90.12",
    "electron-serve": "^3.0.0",
    "expo": "~54.0.27",
    "expo-constants": "~18.0.11",
    "expo-crypto": "~15.0.8",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "~8.0.10",
    "expo-router": "~6.0.17",
    "expo-secure-store": "^15.0.8",
    "expo-status-bar": "~3.0.9",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.5",
    "i18next": "^25.7.1",
    "intl-pluralrules": "^2.0.1",
    "node-7z": "^3.0.0",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-i18next": "^16.4.0",
    "react-native": "0.81.5",
    "react-native-gesture-handler": "~2.28.0",
    "react-native-localize": "^3.6.0",
    "react-native-mmkv": "^4.1.0",
    "react-native-paper": "^5.14.5",
    "react-native-reanimated": "~4.1.1",
    "react-native-render-html": "^6.3.4",
    "react-native-safe-area-context": "~5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-svg-transformer": "^1.5.2",
    "react-native-web": "^0.21.2",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/react": "~19.1.17",
    "babel-plugin-module-resolver": "^5.0.2",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.3",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.chanomhub.chanox2",
    "productName": "ChanoX2",
    "extraMetadata": {
      "main": "electron-main.js"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "web-build/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "protocols": {
      "name": "ChanoX2 URL",
      "schemes": [
        "chanox2"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games",
      "icon": "assets/icon.png"
    }
  },
  "private": true
}