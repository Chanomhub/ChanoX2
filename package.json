{
  "name": "chanox2",
  "version": "1.0.4",
  "description": "Desktop application for ChanomHub - Game mods and downloads platform",
  "author": {
    "name": "ChanomHub",
    "email": "contact@chanomhub.com"
  },
  "main": "expo-router/entry",
  "scripts": {
    "start": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "electron:start": "concurrently -k \"bun start\" \"wait-on tcp:8081 && cross-env NODE_ENV=development electron electron-main.js\"",
    "build:web": "expo export --platform web && node scripts/fix-web-paths.js",
    "build:electron": "electron-builder",
    "build:all": "npm run build:web && npm run build:electron",
    "test": "jest"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "electron-serve": "^3.0.0",
    "expo": "~54.0.25",
    "expo-constants": "~18.0.10",
    "expo-linking": "~8.0.9",
    "expo-router": "~6.0.15",
    "expo-secure-store": "^15.0.7",
    "expo-status-bar": "~3.0.8",
    "graphql": "^16.12.0",
    "graphql-request": "^7.3.5",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.0",
    "react-native-screens": "~4.16.0",
    "react-native-web": "^0.21.0"
  },
  "devDependencies": {
    "@types/react": "~19.1.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^39.2.4",
    "electron-builder": "^26.0.12",
    "typescript": "~5.9.2",
    "wait-on": "^9.0.3"
  },
  "optionalDependencies": {
    "dmg-license": "^1.0.11"
  },
  "build": {
    "appId": "com.chanomhub.chanox2",
    "productName": "ChanoX2",
    "extraMetadata": {
      "main": "electron-main.js"
    },
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "package.json"
    ],
    "publish": null,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game",
      "icon": "assets/icon.png"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "category": "public.app-category.games",
      "icon": "assets/icon.png"
    }
  },
  "private": true
}