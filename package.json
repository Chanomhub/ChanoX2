{
    "name": "chanox2",
    "version": "1.2.4",
    "description": "Desktop application for ChanomHub",
    "author": {
        "name": "ChanomHub",
        "email": "contact@chanomhub.com"
    },
    "main": "electron/main.cjs",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:prod": "npm run build && cross-env NODE_ENV=production electron ."
    },
    "dependencies": {
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-slot": "^1.2.4",
        "@supabase/supabase-js": "^2.87.1",
        "@tanstack/react-query": "^5.90.12",
        "@types/dompurify": "^3.0.5",
        "7zip-bin": "^5.2.0",
        "ably": "^2.15.0",
        "dompurify": "^3.3.1",
        "graphql": "^16.12.0",
        "graphql-request": "^7.4.0",
        "i18next": "^25.7.2",
        "node-7z": "^3.0.0",
        "react": "^19.1.0",
        "react-dom": "^19.1.0",
        "react-i18next": "^16.5.0",
        "react-router-dom": "^7.1.1",
        "zustand": "^5.0.9"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^22.10.2",
        "@types/react": "^19.1.17",
        "@types/react-dom": "^19.1.17",
        "@vitejs/plugin-react": "^4.4.0",
        "autoprefixer": "^10.4.20",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^39.2.7",
        "electron-builder": "^26.0.12",
        "lucide-react": "^0.469.0",
        "postcss": "^8.5.1",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.4.17",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "~5.9.3",
        "vite": "^6.0.5",
        "wait-on": "^9.0.3"
    },
    "build": {
        "appId": "com.chanomhub.chanox2",
        "productName": "ChanoX2",
        "directories": {
            "output": "release",
            "buildResources": "public"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "asarUnpack": [
            "node_modules/7zip-bin/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/icon.png"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb"
            ],
            "category": "Game",
            "icon": "public/icon.png"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.games",
            "icon": "public/icon.png"
        }
    },
    "private": true
}