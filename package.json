{
    "name": "chanox2",
    "version": "1.5.1",
    "description": "Desktop application for ChanomHub",
    "author": {
        "name": "ChanomHub",
        "email": "contact@chanomhub.com"
    },
    "main": "electron/main.cjs",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build": "tsc -b && vite build",
        "preview": "vite preview",
        "electron:dev": "concurrently -k \"vite\" \"wait-on tcp:5173 && cross-env NODE_ENV=development electron .\"",
        "electron:build": "npm run build && electron-builder",
        "electron:prod": "npm run build && cross-env NODE_ENV=production electron ."
    },
    "dependencies": {
        "@chanomhub/sdk": "1.2.0",
        "@radix-ui/react-avatar": "^1.1.11",
        "@radix-ui/react-checkbox": "^1.3.3",
        "@radix-ui/react-dialog": "^1.1.15",
        "@radix-ui/react-dropdown-menu": "^2.1.16",
        "@radix-ui/react-label": "^2.1.8",
        "@radix-ui/react-progress": "^1.1.8",
        "@radix-ui/react-radio-group": "^1.3.8",
        "@radix-ui/react-scroll-area": "^1.2.10",
        "@radix-ui/react-separator": "^1.1.8",
        "@radix-ui/react-slot": "^1.2.4",
        "@radix-ui/react-tabs": "^1.1.13",
        "@radix-ui/react-toast": "^1.2.15",
        "@supabase/supabase-js": "^2.91.0",
        "@tanstack/react-query": "^5.90.19",
        "@types/dompurify": "^3.2.0",
        "7zip-bin": "^5.2.0",
        "ably": "^2.17.0",
        "date-fns": "^4.1.0",
        "dompurify": "^3.3.1",
        "graphql": "^16.12.0",
        "graphql-request": "^7.4.0",
        "i18next": "^25.8.0",
        "node-7z": "^3.0.0",
        "react": "^19.2.3",
        "react-dom": "^19.2.3",
        "react-i18next": "^16.5.3",
        "react-router-dom": "^7.12.0",
        "socket.io-client": "^4.8.3",
        "swr": "^2.3.8",
        "zustand": "^5.0.10"
    },
    "devDependencies": {
        "@tailwindcss/typography": "^0.5.19",
        "@types/node": "^22.19.7",
        "@types/react": "^19.2.9",
        "@types/react-dom": "^19.2.3",
        "@vitejs/plugin-react": "^4.7.0",
        "autoprefixer": "^10.4.23",
        "class-variance-authority": "^0.7.1",
        "clsx": "^2.1.1",
        "concurrently": "^9.2.1",
        "cross-env": "^10.1.0",
        "electron": "^39.2.7",
        "electron-builder": "^26.4.0",
        "lucide-react": "^0.469.0",
        "postcss": "^8.5.6",
        "tailwind-merge": "^2.6.0",
        "tailwindcss": "^3.4.19",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "~5.9.3",
        "vite": "^6.4.1",
        "wait-on": "^9.0.3"
    },
    "optionalDependencies": {
        "@tensorflow/tfjs": "^4.22.0",
        "nsfwjs": "^4.2.1"
    },
    "build": {
        "appId": "com.chanomhub.chanox2",
        "productName": "ChanoX2",
        "directories": {
            "output": "release",
            "buildResources": "public"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "package.json"
        ],
        "asarUnpack": [
            "node_modules/7zip-bin/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "perMachine": false,
            "allowToChangeInstallationDirectory": true,
            "include": "public/installer.nsh",
            "installerIcon": "public/icon.ico",
            "uninstallerIcon": "public/icon.ico",
            "installerHeaderIcon": "public/icon.ico",
            "license": "public/license.txt",
            "runAfterFinish": true,
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "menuCategory": "ChanomHub"
        },
        "linux": {
            "target": [
                "AppImage",
                "deb",
                "flatpak",
                "rpm"
            ],
            "category": "Game",
            "icon": "public/icon.png"
        },
        "flatpak": {
            "base": "org.electronjs.Electron2.BaseApp",
            "baseVersion": "24.08",
            "runtime": "org.freedesktop.Platform",
            "runtimeVersion": "24.08",
            "sdk": "org.freedesktop.Sdk",
            "finishArgs": [
                "--share=ipc",
                "--socket=x11",
                "--socket=wayland",
                "--socket=pulseaudio",
                "--share=network",
                "--device=dri",
                "--filesystem=home",
                "--filesystem=xdg-download",
                "--filesystem=/tmp",
                "--talk-name=org.freedesktop.Notifications",
                "--talk-name=org.kde.StatusNotifierWatcher"
            ]
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "category": "public.app-category.games",
            "icon": "public/icon.png"
        },
        "dmg": {
            "background": "public/dmg-background.png",
            "icon": "public/icon.png",
            "iconSize": 100,
            "contents": [
                {
                    "x": 180,
                    "y": 170
                },
                {
                    "x": 480,
                    "y": 170,
                    "type": "link",
                    "path": "/Applications"
                }
            ],
            "window": {
                "width": 660,
                "height": 400
            }
        }
    },
    "private": true
}
